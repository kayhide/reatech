<div class="checkinHeader">
<%= link_to 'チェックインする', new_checkin_path , { :class => "btn btn-primary btn-large" }  %>
</div>

<div class="timeLine">
  <% @checkins.each do |checkin| %>
  <div class="timeLine__row">
    <div class="row">
      <div class="col-lg-6">
        <div class="b-worker media">
          <a class="pull-left" href="#">
            <img src="http://placehold.jp/80x80.png" alt="">
          </a>
          <div class="media-body">
            <h5 class="media-heading">UserName:<%= checkin.user %></h5>
            <p>Project:</p>
          </div>

          <div class="worker--comment arrow_box">
            <p><%= checkin.message %></p>
          </div>

        </div>
      </div>

            <div style="width:150px;height:150px" class="gmap"  data-title="WEB API ハッカソン" data-lat="35.657976" data-lng="139.782504"></div>

    </div>
  </div>
  <% end %>
</div>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Location</th>
      <th>Checked out at</th>
      <th>Message</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @checkins.each do |checkin| %>
      <tr>
        <td><%= checkin.user %></td>
        <td><%= checkin.location %></td>
        <td><%= checkin.checked_out_at %></td>
        <td><%= checkin.message %></td>
        <td><%= link_to 'Show', checkin %></td>
        <td><%= link_to 'Edit', edit_checkin_path(checkin) %></td>
        <td><%= link_to 'Destroy', checkin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

